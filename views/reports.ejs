<%- include('partials/header.ejs') %> <%- include('partials/nav.ejs') %> <%-
include('partials/createModal.ejs') %> 

<main class="content px-3 py-2">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-lg-12 d-flex">
        <div class="card flex-fill border-0 illustration">
          <div class="card-body p-0 d-flex flex-fill">
            <div class="row g-0 w-100">
              <div class="p-3 m-1">
                <h4 class="fw-bold mb-3">Reporting Tab</h4>
                <p class="mb-0">
                  This the Reporting Tool. This is were you will be creating
                  Reports. Applying the concepts of SQL in CRUD Operations and
                  Applying the HTTP Protocols
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-lg-6 d-flex my-2">
        <button class="btn btn-primary py-1 px-2 ms-4" data-bs-toggle="modal" data-bs-target="#create">
          <i class="bi bi-plus-circle me-1"></i>Create
        </button>
        <button class="btn btn-secondary py-1 px-2 ms-2">
          <i class="bi bi-arrow-up-circle me-1"></i>Update
        </button>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-lg-12 mt-4">
        <table
          id="example"
          class="table table-striped table-hover"
          style="width: 100%"
        >
          <thead>
            <tr >
              <th>Date</th>
              <th>Time</th>
              <th>Report Title</th>
              <th>Event Type</th>
              <th>Details</th>
              <th>Status</th>
              <th>File</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (locals.reports) { %>
              <%  reports.forEach((report) => { %>
                
                <%# const date = new Date() %>
                <% const date = new Intl.DateTimeFormat("en-US").format(report.event_date) %>
                <%# console.log(date) %>
                <%# const fullDate = `${date.getMonth()+1}/${date.getDate()}/${date.getFullYear()}` %>
                <% const id = report.id %>
                <tr>
                  <td><%= date %></td>
                  <td><%= report.event_time %></td>
                  <td><%= report.report_title %></td>
                  <td><%= report.event_type %></td>
                  <td><%= report.details %></td>
                  <td><%= report.status %></td>
                  <td>File here</td>
                  <td>
                    <%# console.log(report.id) %>
                    <!-- <form id="form" action="/update/<%# report.id %>"  method="POST"> -->
                      <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#update" id="update-btn">
                        <i class="bi bi-gear-fill"></i>
                      </button>
                      
                    <!-- </form> -->
                    
                    <%- include("partials/updateModal.ejs", {id: id}) %>
                    
                    

                    <form action="/delete/<%= report.id %>"  method="POST">
                    <button class="btn" type="submit">
                      <i class="i bi-trash-fill"></i>
                    </button>
                  </form>
                    
                  <%- %>
                  </td>
                </tr>
                
                

              <% }); %>
          <% } else { %>
            <tr>
              <td>No data</td>
              <td>No data</td>
              <td>No data</td>
              <td>No data</td>
              <td>No data</td>
              <td>No data</td>
              <td>No data</td>
              <td><i class="bi bi-trash"></i></td>
            </tr>
            <% } %>
          </tbody>
          <!-- <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Office</th>
                                <th>Age</th>
                                <th>Start date</th>
                                <th>Salary</th>
                            </tr>
                        </tfoot> -->
        </table>
      </div>
    </div>
  </div>
</main>



<%- include('partials/footer.ejs') %>
